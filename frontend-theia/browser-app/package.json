{
  "name": "beca-browser-app",
  "version": "1.0.0",
  "description": "BECA IDE Browser Application",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@theia/core": "^1.43.0",
    "@theia/editor": "^1.43.0",
    "@theia/filesystem": "^1.43.0",
    "@theia/markers": "^1.43.0",
    "@theia/messages": "^1.43.0",
    "@theia/monaco": "^1.43.0",
    "@theia/navigator": "^1.43.0",
    "@theia/outline-view": "^1.43.0",
    "@theia/output": "^1.43.0",
    "@theia/preferences": "^1.43.0",
    "@theia/process": "^1.43.0",
    "@theia/search-in-workspace": "^1.43.0",
    "@theia/terminal": "^1.43.0",
    "@theia/workspace": "^1.43.0",
    "beca-extension": "1.0.0"
  },
  "devDependencies": {
    "@theia/cli": "^1.43.0"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn build && yarn run download:plugins",
    "clean": "theia clean",
    "build": "theia build --app-target=\"browser\" --mode development",
    "start": "theia start --hostname=0.0.0.0 --port=3000 --plugins=local-dir:../../plugins",
    "watch": "theia build --watch --mode development",
    "download:plugins": "theia download:plugins"
  },
  "theia": {
    "frontend": {
      "config": {
        "applicationName": "BECA IDE",
        "preferences": {
          "files.autoSave": "afterDelay",
          "editor.fontSize": 14,
          "terminal.integrated.fontSize": 14,
          "workbench.colorTheme": "dark",
          "editor.minimap.enabled": true,
          "editor.wordWrap": "on"
        }
      }
    },
    "backend": {
      "config": {
        "startupTimeout": -1
      }
    }
  }
}
