# BECA Docker Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# MCP Server Authentication
# ============================================
# Generate a secure token for MCP API authentication
# Example: openssl rand -hex 32
MCP_AUTH_TOKEN=your-secure-token-here

# ============================================
# Ollama Configuration
# ============================================
# Ollama base URL (internal Docker network)
OLLAMA_URL=http://ollama-gpu:11434

# Models to pull on startup (comma-separated)
OLLAMA_MODELS=llama3.1:8b,qwen2.5-coder:7b-instruct

# ============================================
# Google Cloud Configuration
# ============================================
# Your GCP project ID
GCP_PROJECT_ID=beca-0001

# GCP zone for VM deployment
GCP_ZONE=us-central1-b

# VM instance name
GCP_INSTANCE_NAME=beca-ollama

# VM machine type (with GPU)
GCP_MACHINE_TYPE=n1-standard-4

# GPU type and count
GCP_GPU_TYPE=nvidia-tesla-t4
GCP_GPU_COUNT=1

# Boot disk size (GB)
GCP_BOOT_DISK_SIZE=100

# Use SPOT/Preemptible instance for cost savings (true/false)
GCP_USE_SPOT=true

# ============================================
# SSL/TLS Configuration (Optional)
# ============================================
# Domain name for SSL certificate (if using custom domain)
DOMAIN_NAME=beca.yourdomain.com

# Email for Let's Encrypt certificates
LETSENCRYPT_EMAIL=your-email@example.com

# ============================================
# Network Configuration
# ============================================
# External IP to allowlist (your home/office IP)
# Get your IP: curl ifconfig.me
ALLOWED_IP=0.0.0.0/0

# ============================================
# Application Configuration
# ============================================
# Gradio server settings
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Enable/disable features
ENABLE_AUTO_LEARNING=true
ENABLE_META_LEARNING=true

# ============================================
# Backup Configuration
# ============================================
# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
